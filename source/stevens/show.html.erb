<!-- Access data.flats with owner's name as key -->
<% steven = data.stevens[owner] %>

<!-- Inject flat data in template -->
<div class="banner banner-light" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://stevensegallery.com/<%= steven.banner_size%>');">
  <div class="banner-content">
    <h1><%= steven.name %></h1>
  </div>
</div>

<div class="steven-header">
<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-2">
    <%= image_tag "https://stevensegallery.com/#{steven.pic_size}", class: "img-circle" %>
    <p><%= steven.name %></p>
    </div>
    <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
    <h3><%= steven.description %></h3>
    </div>
  </div>
  </div>
</div>
</div>
